{
  "name": "woodstack",
  "version": "1.0.0",
  "description": "Simple npm stack workflow for Front-end Developper",
  "private": true,
  "watch": {
    "build-html": {
      "patterns": [
        "src/shtml"
      ],
      "extensions": "shtml",
      "quiet": false
    },
    "build-css": {
      "patterns": [
        "src/scss/"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "build-js": {
      "patterns": [
        "src/js/"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "build-html": "shtml2html -s src/shtml -d dist/",
    "watch-html": "npm-watch build-html",
    "build-css": "node-sass --output-style=compressed --source-map=dist/css/styles.css.map src/scss/styles.scss dist/css/styles.min.css",
    "watch-css": "npm-watch build-css",
    "js-dir": "make-dir dist/js",
    "js-wp": "webpack",
    "build-js": "run-s js-dir js-wp",
    "watch-js": "npm-watch build-js",
    "sprite-svg": "svg-sprite --config svg-sprite.config.json src/images/svg/*.svg & svgo dist/images/sprite.defs.svg",
    "copy-fonts": "copyfiles -u 1 src/fonts/* dist",
    "build": "run-s clear copy-fonts sprite-svg build-*",
    "watch": "build & run-p watch-* & reload -d dist -b",
    "clear": "del -f dist/"
  },
  "author": "Matthieu Schneider",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.6",
    "babel-minify-webpack-plugin": "^0.3.1",
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "make-dir-cli": "^1.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.4.0",
    "reload": "^3.0.1",
    "shtml2html": "^1.0.5",
    "svg-sprite": "^1.5.0",
    "svgo": "^1.3.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "bootstrap": "^4.3.1",
    "jquery": "1.9.1",
    "lodash": "^4.17.15",
    "popper.js": "^1.14.7",
    "svg4everybody": "^2.1.9"
  }
}
